<!-- This file outlines the Login Razor Page. -->

@{
    ViewData["Title"] = "Log In";
}

<h1>Log In</h1>

<!-- Display error if any -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div style="color: red;">@Model.ErrorMessage</div>
}

<!-- Form for cLoggin In -->
<form method="post">
    <div>
        <label for="netId">NetID:</label>
        <input type="text" id="netId" name="NetId" required />
    </div>
    <div>
        <label for="utdId">Password:</label>
    
        <input type="password" id="utdId" name="UtdId" required />
    </div>
    <button type="submit">Submit</button>
</form>